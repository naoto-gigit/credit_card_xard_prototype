<h1>eKYC申請</h1>

<%= form_with(model: @ekyc_application, url: ekyc_applications_path, local: true) do |form| %>
  <% if @ekyc_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ekyc_application.errors.count, "error") %> prohibited this ekyc_application from being saved:</h2>

      <ul>
        <% @ekyc_application.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :document_type %><br />
    <%= form.select :document_type, ['運転免許証', 'マイナンバーカード', 'パスポート'], prompt: '選択してください' %>
  </div>

  <div class="field">
    <%= form.label :document_number %><br />
    <%= form.text_field :document_number %>
  </div>

  <div class="field">
    <%= form.label :full_name %><br />
    <%= form.text_field :full_name %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %><br />
    <%= form.date_field :date_of_birth %>
  </div>

  <div class="field">
    <%= form.label :address %><br />
    <%= form.text_area :address %>
  </div>

  <div class="actions">
    <%= form.submit "申請する" %>
  </div>
<% end %>
