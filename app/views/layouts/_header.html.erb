<header class="navbar navbar-dark sticky-top bg-custom-header flex-md-nowrap shadow py-0">
  <div class="container">
    <%= link_to "Xard Prototype", root_path, class: "navbar-brand col-md-3 col-lg-2 me-0 px-3" %>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-nav">
      <div class="nav-item text-nowrap">
        <% if user_signed_in? %>
          <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-light btn-header rounded-0 btn-icon-vertical" do %>
            <i class="bi bi-box-arrow-right"></i>
            <span>ログアウト</span>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "btn btn-success btn-header rounded-0 btn-icon-vertical" do %>
            <i class="bi bi-box-arrow-in-right"></i>
            <span>ログイン</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>
